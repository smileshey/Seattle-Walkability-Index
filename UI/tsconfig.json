{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext", 
    "strict": true,
    "jsx": "react-jsx", 
    "esModuleInterop": true,
    "skipLibCheck": true, // Skip type checking of .d.ts files for performance
    "typeRoots": ["./node_modules/@types", "./types"],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./src"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}



