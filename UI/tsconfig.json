{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext", 
    "strict": true,
    "jsx": "react-jsx", 
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "types": []
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
